{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules"],
  "extends": ["./tsconfig.json"],
  "include": ["src/*.ts", ".eslintrc.cjs", "cucumber.cjs"]
}
